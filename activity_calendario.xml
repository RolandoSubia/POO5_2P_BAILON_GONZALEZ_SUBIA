<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bac"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="363dp"
        android:layout_height="92dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:text="Calendario de Eventos"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/fechaEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="Seleccione una fecha"
        android:padding="8dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/eventosHoyTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Eventos de hoy"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TableLayout
        android:id="@+id/eventosTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:stretchColumns="1">

        <TableRow android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Deporte"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="Hora"
                android:textStyle="bold"
                android:background="@drawable/table_cell_border" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/salirButton"
        android:layout_width="381dp"
        android:layout_height="67dp"
        android:layout_gravity="center"
        android:backgroundTint="#0F1E6D"
        android:text="@string/btSalir"
        android:textSize="18sp" />

</LinearLayout>
